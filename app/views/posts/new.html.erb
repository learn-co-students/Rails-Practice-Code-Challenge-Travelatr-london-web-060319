<%= form_for @post do |f| %>
<% if @post.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@post.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>

    <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>post
    <% end %>
    </ul>
  </div>
<% end %>
  <%= f.label "Title" %>
  <%= f.text_field :title %>
  <%= f.label "Content" %>
  <%= f.text_field :content %>
  <%= f.collection_select :destination_id, Destination.all, :id, :name %>
  <%= f.collection_select :blogger_id, Blogger.all, :id, :name %>
  <%= f.submit "New Post" %>
<% end %>